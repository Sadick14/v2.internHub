rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read their own profile, admins can read/write any profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin();
    }

    // Invites can only be managed by admins
    match /invites/{inviteId} {
        allow read, write: if isAdmin();
    }

    // University Structure can only be managed by admins
    match /faculties/{facultyId} {
       allow read, write: if isAdmin();
    }
     match /departments/{departmentId} {
       allow read, write: if isAdmin();
    }
    
    // Reports can be read by admins
    match /reports/{reportId} {
        allow read: if isAdmin();
    }
    
    // System settings can only be managed by admins
    match /system_settings/{settingId} {
        allow read, write: if isAdmin();
    }

  }
}
