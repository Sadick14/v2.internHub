rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow unauthenticated reads on the 'invites' collection for verification
    match /invites/{inviteId} {
      allow read, update: if true; 
    }
    
    // Allow users to create their own user document during registration
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update, delete: if request.auth.uid == userId;
    }
    
    // Allow read/write access to all other collections for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
