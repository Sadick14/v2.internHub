
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Any authenticated user can read user profiles.
      allow read: if isAuth();
      // A user can create their OWN user document. This is key for registration.
      allow create: if request.auth.uid == userId;
      // Only admins can update or delete users.
      allow update, delete: if isAdmin();
    }

    match /invites/{inviteId} {
      // Allow unauthenticated access for the verification/registration flow.
      // Security is handled by server-side code checking the verification code.
      allow read, write: if true;
    }

    match /faculties/{facultyId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /departments/{departmentId} {
       allow read: if isAuth();
       allow write: if isAdmin();
    }

    match /internship_terms/{termId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /audit_logs/{logId} {
       allow read, write: if isAdmin();
    }
    
    match /reports/{reportId} {
      // TODO: Add more granular rules (e.g., student can create, assigned lecturer can update)
      allow read, write: if isAuth();
    }
  }
}
