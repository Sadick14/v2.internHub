rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read their own profile, admins can read/write any profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin();
    }
    
    // Admins can manage invites
    match /invites/{inviteId} {
        allow read, write: if isAdmin();
    }

    // Admins can manage university structure
    match /faculties/{facultyId} {
        allow read, write: if isAdmin();
    }
    match /departments/{departmentId} {
        allow read, write: if isAdmin();
    }

    // Admins can manage internship terms
     match /internship_terms/{termId} {
        allow read, write: if isAdmin();
    }
    
    // Admins can manage global system settings
    match /system_settings/{settingId} {
        allow read, write: if isAdmin();
    }
    
    // Reports can be created by students, read by relevant parties
    match /reports/{reportId} {
      allow create: if request.auth.uid == request.resource.data.studentId;
      // This rule needs refinement to allow lecturers/supervisors to read/update
      allow read, update: if request.auth.uid == request.resource.data.studentId || isAdmin();
    }

  }
}
