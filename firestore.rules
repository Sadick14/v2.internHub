rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      // Check if the user is authenticated and their user document shows they are an admin.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read, write: if isAdmin();
      // Any authenticated user can read their own profile
      allow get: if request.auth != null && request.auth.uid == userId;
    }

    match /invites/{inviteId} {
      allow read, create: if isAdmin();
    }

    match /faculties/{facultyId} {
      allow read, create, update, delete: if isAdmin();
    }

    match /departments/{departmentId} {
      allow read, create, update, delete: if isAdmin();
    }

    match /reports/{reportId} {
      // Admins can see all reports
      allow read: if isAdmin();
    }

    // Admins have full access to system settings.
    match /system_settings/{settingId} {
      allow read, write: if isAdmin();
    }

    // Allow read for authenticated users on some collections for UI purposes
    match /faculties/{facultyId} {
      allow get: if request.auth != null;
    }
    match /departments/{departmentId} {
      allow get: if request.auth != null;
    }
  }
}
