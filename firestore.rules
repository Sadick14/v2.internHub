rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read/write their own data. Admins can read/write any user data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Invites can be read by admins.
    match /invites/{inviteId} {
      allow read, create: if isAdmin();
    }

    // University structure can be read by anyone, but only modified by admins.
    match /faculties/{facultyId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /departments/{departmentId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Reports can be read by the student who owns it, or any admin/lecturer/hod/supervisor.
    // They can only be created/updated by the student.
    // TODO: Add rules for supervisors/lecturers to update with comments.
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.studentId;
    }
    
    // Internship terms can only be read and modified by admins.
    match /internship_terms/{termId} {
        allow read, write: if isAdmin();
    }

    // Settings can only be read and modified by admins.
    match /settings/global {
      allow read, write: if isAdmin();
    }
    
    // Audit logs can be read by admins and created by any authenticated user.
    match /audit_logs/{logId} {
       allow read, create: if isAdmin();
    }
  }
}
