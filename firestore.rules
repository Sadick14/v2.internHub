rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSameUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == 'admin';
    }
    
    // Rules for the 'users' collection
    match /users/{userId} {
      // ANYONE can create their own user document, this is needed for registration
      // where the user doesn't have a role yet.
      allow create: if isSameUser(userId);
      
      // Any authenticated user can read the list of users
      allow read: if isSignedIn();
      
      // Only a user can update their own document, or an admin can.
      allow update: if isSameUser(userId) || isAdmin();

      // Nobody can delete user documents for now.
      allow delete: if false;
    }

    // Rules for pending users (invitations)
    match /pendingUsers/{email} {
        // Only admins can create invitations
        allow create: if isAdmin();
        
        // Anyone can read a pending user document (needed for verification)
        allow read: if true;
        
        // Only admins can update or delete pending invitations
        allow update, delete: if isAdmin();
    }
  }
}
