rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write access to invites for verification and code updates.
    // This is safe because it's handled by secure server actions.
    match /invites/{inviteId} {
      allow read, write: if true;
    }

    // Default deny all other reads/writes unless authenticated
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
